<div class="container col-6">
  <h1>My Tasks:</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure? Really? Sure?"} do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      <% end %>
    </li>
  </ul>
   <%= link_to '+ create a new task', new_task_path, class: "btn btn-primary"%>
</div>
